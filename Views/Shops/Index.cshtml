@model MyShop.Models.ShopGenreViewModel@{    ViewData["Title"] = "Index";}<h1>Thông tin sản phẩm</h1><p>    <a asp-action="Create">Tạo mới</a></p><form asp-controller="Shops" asp-action="Index" method="get">    <p>        <select asp-for="ShopGenre" asp-items="Model.Genres">            <option value="">All</option>        </select>        Tên sản phẩm: <input type="text" name="SearchString" />        <input type="submit" value="Tìm kiếm" />    </p></form><table class="table">    <thead>        <tr>            <th>                @Html.DisplayNameFor(model => model.Shops[0].Title)            </th>            <th>                @Html.DisplayNameFor(model => model.Shops[0].Genre)            </th>            <th>                @Html.DisplayNameFor(model => model.Shops[0].Price)            </th>            <th></th>        </tr>    </thead>    <tbody>        @foreach (var item in Model.Shops)        {    <tr>        <td>            @Html.DisplayFor(modelItem => item.Title)        </td>        <td>            @Html.DisplayFor(modelItem => item.Genre)        </td>        <td>            @Html.DisplayFor(modelItem => item.Price)        </td>        <td>            <a asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a> |            <a asp-action="Details" asp-route-id="@item.Id">Xem</a> |            <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>        </td>    </tr>}    </tbody></table>